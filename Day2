import java.util.*;
class Main{
    public static void main(String args[])
    {
    Scanner sc=new Scanner(System.in);
    int i;
    
    for(i=1;i<=4;i++)
    {
        for(int j=1;j<=5;j++)
        {
        System.out.print("*");
    
    }
    System.out.println(" ");
}
}
}


