import java.util.*;
 public class Main{
    public static void main(String args[])
    {
    Scanner sc=new Scanner(System.in);
    int i;
    int j;
    int n=4;
   
    //outer loop
  for(i=1;i<=n;i++)
  {
      for(j=1;j<=i+1;j++)
      {
          System.out.print(i);
      }
      System.out.println();
  }
    }}

